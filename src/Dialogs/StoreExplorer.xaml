<Window x:Class="CertViewer.Dialogs.StoreExplorer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CertViewer.Utilities"
        mc:Ignorable="d"
        Title="Certificate Store" Height="354" Width="640"
        WindowStyle="ToolWindow"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <BitmapImage x:Key="ImageSource_CertificateIcon" UriSource="../Resources/ico_certificate_big.png"/>
        <DataTemplate x:Key="Template">
            <StackPanel Orientation="Horizontal" Margin="0,5,0,5" ToolTip="{Binding}">
                <Image Source="{StaticResource ImageSource_CertificateIcon}" Width="32" Height="32" Margin="0,0,8,0"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition Width="4"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="SubjectDN:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding Subject}" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="IssuerDN:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding Issuer}" VerticalAlignment="Center"/>
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="SerialNo.:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding SerialNumber}" VerticalAlignment="Center"/>
                </Grid>
            </StackPanel>
        </DataTemplate>
        <Style x:Key="MouseDoubleClick" TargetType="{x:Type ListBoxItem}">
            <EventSetter Event="MouseDoubleClick" Handler="List_Certificates_MouseDoubleClick"/>
        </Style>
        <local:FontSizeConverter x:Key="FontSize_Smaller" Ratio="0.85"/>
    </Window.Resources>

    <DockPanel Margin="12,12,12,12" UseLayoutRounding="True" LastChildFill="True">
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="True" Margin="0,8,0,0">
            <Button Name="Button_Cancel" Content="Cancel" DockPanel.Dock="Right" FontWeight="Bold" MinWidth="125" MinHeight="25" Click="Button_Cancel_Click"></Button>
            <Button Name="Button_Load" Content="Load" DockPanel.Dock="Right" FontWeight="Bold" MinWidth="125" MinHeight="25" Margin="0,0,8,0" Click="Button_Load_Click" IsEnabled="False"></Button>
            <Grid DockPanel.Dock="Left"></Grid>
        </DockPanel>
        <Label DockPanel.Dock="Top" Content="Certificate store:" FontWeight="SemiBold" Padding="0" Margin="0,0,0,2"></Label>
        <ComboBox DockPanel.Dock="Top" Name="ComboBox_StoreNames" SelectionChanged="ComboBox_StoreNames_SelectionChanged" FontFamily="{StaticResource HackFont}" Padding="5"></ComboBox>
        <Label DockPanel.Dock="Top" Content="Certificates:" FontWeight="SemiBold" Padding="0" Margin="0,8,0,2"></Label>
        <Grid DockPanel.Dock="Top">
            <ListBox Name="List_Certificates" FontFamily="{StaticResource HackFont}" FontSize="{Binding FontSize, Converter={StaticResource FontSize_Smaller}, RelativeSource={RelativeSource FindAncestor, AncestorType=Control}}" ItemTemplate="{StaticResource Template}" ItemContainerStyle="{StaticResource MouseDoubleClick}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="False" SelectionChanged="List_Certificates_SelectionChanged"/>
            <TextBlock Name="Text_Placeholder" Text="No certificates found in this store!" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="DarkRed" Opacity="0.75" Visibility="Collapsed"/>
        </Grid>
    </DockPanel>
</Window>
